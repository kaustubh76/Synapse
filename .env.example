# ============================================================
# SYNAPSE ENVIRONMENT CONFIGURATION
# Copy this to .env and fill in your API keys
# ============================================================

# ============================================================
# CROSSMINT (Wallet & Payments)
# Get from: https://www.crossmint.com/
# ============================================================
CROSSMINT_API_KEY=
CROSSMINT_PROJECT_ID=

# ============================================================
# WEATHER API (For Weather Bot - Real Data)
# Get from: https://openweathermap.org/api
# ============================================================
OPENWEATHERMAP_API_KEY=

# ============================================================
# CRYPTO API (For Crypto Bot - Real Prices)
# Get from: https://www.coingecko.com/en/api (free tier available)
# ============================================================
COINGECKO_API_KEY=

# ============================================================
# NEWS API (For News Bot - Real Headlines)
# Get from: https://newsapi.org/
# ============================================================
NEWS_API_KEY=

# ============================================================
# x402 PAYMENT PROTOCOL
# ============================================================
# Set to 'false' for real blockchain payments
X402_DEMO_MODE=true

# x402 Facilitator URL (for payment processing)
X402_FACILITATOR_URL=

# Blockchain network: base-sepolia (testnet) or base-mainnet
X402_CHAIN=base-sepolia

# ============================================================
# BLOCKCHAIN RPC
# ============================================================
BASE_RPC_URL=https://sepolia.base.org

# ============================================================
# EIGENCLOUD (Verifiable AI & Compute)
# Get from: https://developers.eigencloud.xyz/
# Docs: https://docs.eigencloud.xyz/
# ============================================================

# EigenCloud API Key (for EigenCompute and EigenAI)
EIGENCLOUD_API_KEY=

# EigenCloud Project ID (optional)
EIGENCLOUD_PROJECT_ID=

# EigenCompute API URL
EIGENCOMPUTE_API_URL=https://api.eigencloud.xyz

# TEE Verifier URL (for attestation verification)
TEE_VERIFIER_URL=https://verify.eigencloud.xyz

# ZK Proof Verifier URL
ZK_VERIFIER_URL=https://verify.eigencloud.xyz

# ============================================================
# ERC-8004 ON-CHAIN REGISTRY
# Agent identity registry on Base Sepolia
# ============================================================

# RPC URL for ERC-8004 contract calls
ERC8004_RPC_URL=https://sepolia.base.org

# ERC-8004 Registry Contract Address (Base Sepolia)
# Note: This is a placeholder - deploy your own or use official when available
ERC8004_REGISTRY_ADDRESS=0x0000000000000000000000000000000000008004

# Chain ID for ERC-8004 (Base Sepolia = 84532)
ERC8004_CHAIN_ID=84532

# ============================================================
# EIGENCLOUD DEMO MODE
# Set to 'false' when you have real API keys
# ============================================================
EIGENCLOUD_DEMO_MODE=true
TEE_DEMO_MODE=true
ZK_DEMO_MODE=true
ERC8004_DEMO_MODE=true

# ============================================================
# SERVER CONFIGURATION
# ============================================================
API_PORT=3001
WEB_PORT=3000
MCP_GATEWAY_PORT=3002

# CORS origin for web dashboard
CORS_ORIGIN=http://localhost:3000

# ============================================================
# OPTIONAL: Skip demo providers on startup
# ============================================================
SKIP_DEMO_PROVIDERS=false
