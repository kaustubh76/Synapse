# ============================================================
# SYNAPSE ENVIRONMENT CONFIGURATION
# Copy this to .env and fill in your API keys
# ============================================================

# ============================================================
# CROSSMINT (Wallet & Payments)
# Get from: https://www.crossmint.com/
# ============================================================
CROSSMINT_API_KEY=
CROSSMINT_PROJECT_ID=

# ============================================================
# WEATHER API (For Weather Bot - Real Data)
# Get from: https://openweathermap.org/api
# ============================================================
OPENWEATHERMAP_API_KEY=

# ============================================================
# CRYPTO API (For Crypto Bot - Real Prices)
# Get from: https://www.coingecko.com/en/api (free tier available)
# ============================================================
COINGECKO_API_KEY=

# ============================================================
# NEWS API (For News Bot - Real Headlines)
# Get from: https://newsapi.org/
# ============================================================
NEWS_API_KEY=

# ============================================================
# x402 PAYMENT PROTOCOL
# ============================================================
# Set to 'false' for real blockchain payments
X402_DEMO_MODE=true

# x402 Facilitator URL (for payment processing)
X402_FACILITATOR_URL=

# Blockchain network: base-sepolia (testnet) or base (mainnet)
X402_NETWORK=base-sepolia

# ============================================================
# THIRDWEB (x402 Payment Facilitator)
# Get from: https://thirdweb.com/dashboard/settings/api-keys
# ============================================================
THIRDWEB_SECRET_KEY=
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=

# ============================================================
# BLOCKCHAIN RPC
# ============================================================
BASE_RPC_URL=https://sepolia.base.org

# ============================================================
# EIGENCLOUD (Verifiable AI & Compute)
# Get from: https://developers.eigencloud.xyz/
# Docs: https://docs.eigencloud.xyz/
# ============================================================

# EigenCloud API Key (for EigenCompute and EigenAI)
EIGENCLOUD_API_KEY=

# EigenCloud Project ID (optional)
EIGENCLOUD_PROJECT_ID=

# EigenCompute API URL
EIGENCOMPUTE_API_URL=https://api.eigencloud.xyz

# TEE Verifier URL (for attestation verification)
TEE_VERIFIER_URL=https://verify.eigencloud.xyz

# ZK Proof Verifier URL
ZK_VERIFIER_URL=https://verify.eigencloud.xyz

# ============================================================
# ERC-8004 ON-CHAIN REGISTRY
# Agent identity registry on Base Sepolia
# ============================================================

# RPC URL for ERC-8004 contract calls
ERC8004_RPC_URL=https://sepolia.base.org

# ERC-8004 Registry Contract Address (Base Sepolia)
# Note: This is a placeholder - deploy your own or use official when available
ERC8004_REGISTRY_ADDRESS=0x0000000000000000000000000000000000008004

# Chain ID for ERC-8004 (Base Sepolia = 84532)
ERC8004_CHAIN_ID=84532

# ============================================================
# EIGENCLOUD DEMO MODE
# Set to 'false' when you have real API keys
# ============================================================
EIGENCLOUD_DEMO_MODE=true
TEE_DEMO_MODE=true
ZK_DEMO_MODE=true
ERC8004_DEMO_MODE=true

# ============================================================
# LLM PROVIDERS (for LLM Comparison feature)
# At least one provider is required for LLM comparison to work
# ============================================================

# OpenAI (GPT-4, GPT-4o, GPT-3.5)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic (Claude 3.5 Sonnet, Claude 3 Opus)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Google AI (Gemini 1.5 Pro, Gemini 1.5 Flash)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# Groq (Llama 3.1, Llama 3.3 - fast inference)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=

# Together AI (various open models)
# Get from: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# Ollama (local models - no API key needed)
# Run: ollama serve
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================
# SERVER CONFIGURATION
# ============================================================
API_PORT=3001
WEB_PORT=3000
MCP_GATEWAY_PORT=3002

# API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# CORS origin for web dashboard
CORS_ORIGIN=http://localhost:3000

# ============================================================
# WALLET CONFIGURATION
# ============================================================

# EigenCloud wallet address (pre-funded with testnet USDC)
EIGENCLOUD_WALLET_ADDRESS=0xcF1A4587a4470634fc950270cab298B79b258eDe

# Crossmint treasury wallet
CROSSMINT_TREASURY_ADDRESS=0x98280dc6fEF54De5DF58308a7c62e3003eA7F455

# Platform wallet for receiving payments
SYNAPSE_PLATFORM_WALLET=0x742d35Cc6634C0532925a3b844Bc9e7595f5bE21

# Payment settlement address
PAYMENT_SETTLEMENT_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f5fB21

# ============================================================
# USDC CONTRACT ADDRESSES (by network)
# ============================================================

# Base Sepolia (testnet)
USDC_ADDRESS_BASE_SEPOLIA=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Base (mainnet)
USDC_ADDRESS_BASE=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ============================================================
# LLM INTENT CONFIGURATION
# ============================================================

# Selection price in USDC for choosing an LLM response
LLM_SELECTION_PRICE=0.005

# Default max budget for LLM comparison
LLM_DEFAULT_MAX_BUDGET=0.05

# ============================================================
# DETERMINAL AI CONFIGURATION (EigenArcade)
# ============================================================
DETERMINAL_API_URL=https://determinal-api.eigenarcade.com
DETERMINAL_MODEL=qwen3-32b-128k-bf16

# ============================================================
# EIGENCOMPUTE TEE CONFIGURATION
# ============================================================
EIGENCOMPUTE_TEE_TYPE=intel_tdx
EIGENCOMPUTE_ENCLAVE_VERSION=1.0

# ============================================================
# FRONTEND PUBLIC CONFIGURATION
# These are exposed to the browser (NEXT_PUBLIC_ prefix)
# ============================================================
NEXT_PUBLIC_NETWORK=base-sepolia
NEXT_PUBLIC_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_CROSSMINT_API_URL=https://staging.crossmint.com/api/v1-alpha2
NEXT_PUBLIC_LLM_SELECTION_PRICE=0.005
NEXT_PUBLIC_LLM_DEFAULT_MAX_BUDGET=0.05
NEXT_PUBLIC_EIGENCLOUD_WALLET_ADDRESS=0xcF1A4587a4470634fc950270cab298B79b258eDe
NEXT_PUBLIC_CROSSMINT_TREASURY_ADDRESS=0x98280dc6fEF54De5DF58308a7c62e3003eA7F455
NEXT_PUBLIC_PLATFORM_WALLET=0x742d35Cc6634C0532925a3b844Bc9e7595f5bE21
NEXT_PUBLIC_USDC_ADDRESS_BASE_SEPOLIA=0x036CbD53842c5426634e7929541eC2318f3dCF7e
NEXT_PUBLIC_USDC_ADDRESS_BASE=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ============================================================
# OPTIONAL: Skip demo providers on startup
# ============================================================
SKIP_DEMO_PROVIDERS=false
